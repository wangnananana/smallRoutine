/**detail.wxss**/
page{
  width: 100%;
  height: 100%
}
body,html{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  list-style: none;
}
.box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.box>.header{
    width:100%;
    height: 130px;
    background: red;
    border: 1px solid red;
  }
  .box>.footer{
      width: 100%;
      height: 100px;
      background: greenyellow;
  }
  .box .content{
      width: 100%;
      flex: 1;
      overflow: auto;
  }
  .box .content .mine{
    width: 100%;
  }
  .box .content .mine .list{
    border: 1px solid gainsboro;
     display: flex;
     width: 100%;
  }
  .list view{
    flex: 1;
    padding: 10px 45px;
  }
  .shop .navigator-hover{
    color:red;
    background-color: rgba(0, 0, 0, 0.1);
    opacity: 0.7;
  }